<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/explain_splash_background"
    tools:context="ai.kitt.snowboy.HotwordSetupActivity">

    <RelativeLayout
        android:id="@+id/ll_rerecord_hotword_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="67dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="음성 재녹음"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_rerecord"
                android:layout_width="130px"
                android:layout_height="130px"
                android:onClick="iv_rereocrd_clicked"
                android:src="@drawable/btn_rerecord_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/btn_splash_info"
                android:onClick="btn_splash_info_clicked"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/btn_info_background" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="77dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ll_model_generate_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_rerecord_hotword_layout">

        <TextView
            android:id="@+id/tv_hotword_setup_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="당신의 음성을 녹음해주세요."
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_explain2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GENERATED BY IAI CAPSTONE"
            android:textColor="#978A8A"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_record_btns_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="85dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_model_generate_view">

        <LinearLayout
            android:id="@+id/ll_third_btn_group"
            android:layout_width="93dp"
            android:layout_height="112dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="541dp">

            <Button
                android:id="@+id/btn_record_third"
                android:layout_width="68dp"
                android:layout_height="62dp"
                android:background="@drawable/btn_record_hotword"
                android:onClick="third_btn_record"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="536dp" />

            <TextView
                android:id="@+id/tv_record_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/start_record"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_second_btn_group"
            android:layout_width="93dp"
            android:layout_height="112dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="541dp">

            <Button
                android:id="@+id/btn_record_second"
                android:layout_width="68dp"
                android:layout_height="62dp"
                android:background="@drawable/btn_record_hotword"
                android:onClick="second_btn_record"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="536dp" />

            <TextView
                android:id="@+id/tv_record_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/start_record"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_first_btn_group"
            android:layout_width="93dp"
            android:layout_height="112dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="541dp">

            <Button
                android:id="@+id/btn_record_first"
                android:layout_width="68dp"
                android:layout_height="62dp"
                android:background="@drawable/btn_record_hotword"
                android:onClick="first_btn_record"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="536dp" />

            <TextView
                android:id="@+id/tv_record_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/start_record"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_model_generate_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ll_record_btns_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="64dp"
            android:layout_height="61dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/btn_download_background_gif" />

        <Button
            android:id="@+id/btn_result"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_download_background"
            android:onClick="result_btn_clicked"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="259dp" />

        <TextView
            android:id="@+id/tv_model_generate_result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/hotword_adapt_button"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>